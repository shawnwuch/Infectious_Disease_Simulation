CC		= g++ #clang++ #g++ #icpc
CFLAGS	= --std=c++11 -Wall -Wextra #-pg for profiling and debugging
LDFLAGS	=
LIBS	=

# Rules
info:
	@echo "You can do: make exN, where N is the number of exercise you wish to compile."

%.o: %.cc
	$(CC) $(CFLAGS) -c $<

ex1: Person.o ex1.o
	$(CC) $(CFLAGS) -o main $^

ex2: Person.o Population.o ex2.o
	$(CC) $(CFLAGS) -o main $^

ex3: Person.o Population.o ex3.o
	$(CC) $(CFLAGS) -o main $^

ex4: Person.o Population.o ex4.o
	$(CC) $(CFLAGS) -o main $^

ex5: Person.o Population.o ex5.o
	$(CC) $(CFLAGS) -o main $^

clean:
	rm -f main *~ *.o main
